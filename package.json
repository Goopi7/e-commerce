{
  "name": "e-commerce-monorepo",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application",
  "private": true,
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "build-frontend": "cd frontend && npm run build",
    "build": "echo 'ERROR: This is a monorepo root. Deploy backend and frontend separately by setting Root Directory to backend or frontend in Render'",
    "dev-backend": "cd backend && npm run dev",
    "seed": "cd backend && node seed-fixed.js"
  },
  "keywords": ["ecommerce", "react", "node", "express", "mongodb"],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
